@model IEnumerable<TeamPlayCRUD.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h1 class="jumbotron text-center text-capitalize">Lista general de Jugadores</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Nuevo Jugador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellidos
            </th>
            <th>
                Fecha de Nacimiento
            </th>
            <th>
               Passporte
            </th>
            <th>
                Dirección
            </th>
            <th>
                Sexo
            </th>
            <th>
                Equipo
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.Name)
            </td>
            <td>
                <a asp-action="EditPlayer" asp-route-playerid="@item.Id"
                   class="text-info font-weight-bold">Editar</a> |
                <a asp-action="DeletePlayer" asp-route-playerid="@item.Id"
                   class="text-danger font-weight-bold">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
